# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# NextAuth Secret (최소 32자)
# 생성 방법: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-minimum-32-characters-long"
NEXTAUTH_URL="http://localhost:3000"

# Encryption Key (64자 hex 문자열, 32 bytes)
# 생성 방법: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="your-64-character-hex-string-here"

# Push Notification (Web Push API)
# VAPID 키 생성: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-public-key-here"
VAPID_PRIVATE_KEY="your-private-key-here"

# Cron Job Secret (Vercel Cron 인증용)
# 생성 방법: openssl rand -base64 32
CRON_SECRET="your-cron-secret-here"

# Vercel App URL (프로덕션 배포 후 설정)
VERCEL_APP_URL="https://your-app.vercel.app"

# Admin Email (관리자 로그 접근 제어)
# 설정하지 않으면 모든 인증된 사용자가 관리자 로그에 접근 가능
ADMIN_EMAIL="admin@example.com"
